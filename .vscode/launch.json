{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Advanced TS",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/advanced-ts/src/index.ts",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--inspect", "--exec", "npx tsx"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/packages/advanced-ts",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
